<% # Params:
   #
#   i18n_namespace: for example "admin.enquiry_sets.action"
%>

<dl class="sub-nav">
  <dt><%= t("#{i18n_namespace}.action") %>: </dt>

  <% @valid_filters.each do |filter| %>
    <% if @current_filter == filter %>
      <dd class="active"><%= t("#{i18n_namespace}.actions.#{filter}") %></dd>
    <% else %>
      <dd><%= link_to t("#{i18n_namespace}.actions.#{filter}"),
        current_path_with_query_params(filter: filter, page: 1) %></dd>
    <% end %>
  <% end %>
</dl>
