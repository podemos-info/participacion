<section role="main">
  <%= render 'admin/shared/enquiry_search', url: management_enquiries_path %>

  <div class="wrap row">
    <div id="enquiries" class="enquiries-list small-12 medium-9 column">

      <div class="filters">
        <div class="small-12 medium-7 left">
          <% if @search_terms %>
            <h2 class="margin-top">
              <%= page_entries_info @enquiries %>
              <%= t("enquiries.index.search_results", count: @enquiries.size, search_term: @search_terms) %>
            </h2>
          <% end %>
        </div>

        <%= render @enquiries %>
        <%= paginate @enquiries %>
      </div>
    </div>
  </div>
</section>
