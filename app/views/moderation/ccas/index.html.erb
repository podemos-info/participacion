<h2><%= t("moderation.ccas.index.title") %></h2>

<%= render 'shared/filter_subnav', i18n_namespace: "moderation.ccas.index" %>

<div class="row">
  <h3 class="small-8 large-8 columns"><%= page_entries_info @ccas %></h3>
  <div class="small-4 large-4 columns">
    <div class="right">
      <%= t("moderation.ccas.index.order") %>
      <%= render 'shared/order_selector', i18n_namespace: "moderation.ccas.index" %>
    </div>
  </div>
</div>

<%= form_tag moderate_moderation_ccas_path(request.query_parameters), method: :put do %>
  <p class="left js-check">
    <%= t('shared.check') %>:
    <%= link_to t('shared.check_all'), '#', data: {check_all: "cca_ids[]"} %>
    |
    <%= link_to t('shared.check_none'), '#', data: {check_none: "cca_ids[]"} %>
  </p>

  <table class="clear">
    <tr>
      <th>
        <%= t("moderation.ccas.index.headers.cca") %>
      </th>
      <th>
       <%= t("moderation.ccas.index.headers.moderate") %>
      </th>
    </tr>
    <% @ccas.each do |cca| %>
      <tr id="cca_<%= cca.id %>">
        <td>
          <%= link_to cca.title, cca, target: "_blank" %>
          <br>
          <span class="date"><%= l cca.updated_at.to_date %></span>
          <span class="bullet">&nbsp;&bull;&nbsp;</span>
          <%= cca.flags_count %><i class="icon-flag flag-disable"></i>
          <span class="bullet">&nbsp;&bull;&nbsp;</span>
          <%= cca.author.username %>
          <br>
          <div class="moderation-description">
            <%= cca.description %>
          </div>
        </td>
        <td class="text-center">
          <%= check_box_tag "cca_ids[]", cca.id, nil, id: "#{dom_id(cca)}_check" %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= submit_tag t('moderation.ccas.index.block_authors'),
    name: "block_authors",
    class: "button radius alert",
    data: {confirm: t('moderation.ccas.index.confirm')}
  %>

  <div class="right">
    <%= submit_tag t('moderation.ccas.index.hide_ccas'),
      name: "hide_ccas",
      class: "button radius alert",
      data: {confirm: t('moderation.ccas.index.confirm')}
    %>
    <%= submit_tag t('moderation.ccas.index.ignore_flags'),
      name: "ignore_flags",
      class: "button radius success",
      data: {confirm: t('moderation.ccas.index.confirm')}
    %>
  </div>

  <%= paginate @ccas %>

<% end %>
