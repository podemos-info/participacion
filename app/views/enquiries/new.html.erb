<div class="enquiry-new row">

  <div class="small-12 medium-9 column">
    <%= link_to enquiries_path, class: "left back" do %>
      <i class="icon-angle-left left"></i>
    <%= t("enquiries.new.back_link") %>
    <% end %>
    <h1><%= t("enquiries.new.start_new") %></h1>
    <div class="alert-box info radius">
      <%= link_to "/enquiries_info", target: "_blank" do %>
      <%= t("enquiries.new.more_info")%>
      <% end %>
    </div>
    <%= render "enquiries/form", form_url: enquiries_url %>
  </div>

  <div class="small-12 medium-3 column">
    <i class="icon-enquiries right"></i>
    <h2><%= t("enquiries.new.recommendations_title") %></h2>
    <ul class="recommendations">
      <li><%= t("enquiries.new.recommendation_one") %></li>
      <li><%= t("enquiries.new.recommendation_two") %></li>
      <li><%= t("enquiries.new.recommendation_three") %></li>
    </ul>
  </div>
</div>
