<% voted_classes = css_classes_for_vote(@cca_votes, cca) %>
<div class="votes">
  <div class="in-favor inline-block">
    <%= link_to vote_cca_path(cca, value: 'yes'),
        class: "like #{voted_classes[:in_favor]}", title: t('votes.agree'), method: "post", remote: true do %>
      <i class="icon-like"></i>
      <span><%= votes_percentage('likes', cca) %></span>
    <% end %>
  </div>

  <span class="divider"></span>

  <div class="against inline-block">
    <%= link_to vote_cca_path(cca, value: 'no'), class: "unlike #{voted_classes[:against]}", title: t('votes.disagree'), method: "post", remote: true do %>
      <i class="icon-unlike"></i>
      <span><%= votes_percentage('dislikes', cca) %></span>
    <% end %>
  </div>

  <span class="total-votes">
    <%= t("ccas.cca.votes", count: cca.total_votes) %>
  </span>

  <% if user_signed_in? && current_user.organization? %>
  <div class="organizations-votes" style='display:none'>
    <p>
      <%= t("votes.organizations") %>
    </p>
  </div>
  <% elsif user_signed_in? && !cca.votable_by?(current_user)%>
  <div class="anonymous-votes" style='display:none'>
    <p>
      <%= t("votes.anonymous",
          verify_account: link_to(t("votes.verify_account"), verification_path )).html_safe %>
    </p>
  </div>
  <% elsif !user_signed_in? %>
  <div class="not-logged" style='display:none'>
    <%= t("votes.unauthenticated",
      signin: link_to(t("votes.signin"), user_omniauth_authorize_path(:openid))).html_safe %>
  </div>
  <% end %>
</div>
