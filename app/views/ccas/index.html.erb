<% provide :title do %><%= t('ccas.index.title') %><% end %>
<% content_for :header_addon do %>
  <%= render "shared/search_form_header",
             search_path: ccas_path(page: 1),
             i18n_namespace: "ccas.index.search_form" %>
<% end %>

<section role="main">
  <div class="wrap row">
    <div id="ccas" class="ccas-list small-12 medium-9 column">

      <div class="filters">
        <div class="small-12 medium-7 left">
          <% if @search_terms %>
            <h2 class="margin-top">
              <%= page_entries_info @ccas %>
              <%= t("ccas.index.search_results", count: @ccas.size, search_term: @search_terms) %>
            </h2>
          <% elsif @tag_filter %>
            <h2 class="margin-top">
              <%= page_entries_info @ccas %>
              <%= t("ccas.index.filter_topic", count: @ccas.size, topic: @tag_filter) %>
            </h2>
          <% end %>
        </div>

        <% if @tag_filter || @search_terms %>
          <div class="small-12 medium-5 margin-top inline-block ccas-order">
            <h6 class="inline-block">
              <%= t("ccas.index.select_order") %>
            </h6>
            <%= render 'shared/order_selector', i18n_namespace: "ccas.index" %>
          </div>
        <% else %>
          <div class="small-12 inline-block">
            <h2 class="inline-block">
              <%= t("ccas.index.select_order_long") %>
            </h2>
            <%= render 'shared/order_selector', i18n_namespace: "ccas.index" %>
          </div>
        <% end %>

        <div class="show-for-small-only">
          <%= link_to t("ccas.index.start_cca"), new_cca_path, class: 'button radius expand' %>
        </div>

        <% if @featured_ccas.present? %>
          <div id="featured-ccas" class="row featured-ccas-container">
            <div class="small-12 medium-3 column">
              <h2>
                <%= t("ccas.index.featured_ccas_html") %>
              </h2>
              <span class="show-for-medium-up">
                <%= image_tag("featured_ccas.jpg", size: "210x135") %>
              </span>
            </div>
            <div class="small-12 medium-9 column ccas-list">
              <% @featured_ccas.each do |featured_cca| %>
              <%= render "featured_cca", cca: featured_cca %>
              <% end %>
            </div>
          </div>
        <% end %>

        <%= render partial: 'ccas/cca', collection: @ccas %>
        <%= paginate @ccas %>
      </div>
    </div>

    <div class="small-12 medium-3 column">
      <aside class="sidebar" role="complementary">
        <%= link_to t("ccas.index.start_cca"), new_cca_path, class: 'button radius expand' %>
        <%= render "shared/tag_cloud", taggable: 'cca' %>
      </aside>
    </div>
  </div>
</section>
